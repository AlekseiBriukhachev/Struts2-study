<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>
    <package name="register" extends="struts-default">
        <action name="registerAction" class="com.aleksei.struts2.RegisterAction">
            <result name="success">/view/welcome.jsp</result>
            <result name="input">/view/register.jsp</result>
            <result name="error">/view/error.jsp</result>
        </action>
        <action name="formLoadAction" method="initializeColors" class="com.aleksei.struts2.RegisterAction">
            <result name="input">/view/register.jsp</result>
        </action>
    </package>
</struts>